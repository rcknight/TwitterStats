@model TwitterStats.Models.StatsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>
            Twitter Stats - RichK1986
        </title>
        <link href="http://fonts.googleapis.com/css?family=Lato:100,300,400,700" media="all" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/bootstrap.min.css")" media="all" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/morris.css")" media="all" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/style.css")" media="all" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/color/gray.css")" media="all" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/content/css/font-awesome.css")" media="all" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/content/css/overrides.css")" media="all" rel="stylesheet" type="text/css" />
                   
        <script src="http://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/raphael.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/masonry.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr.custom.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/morris.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/newmain.js")" type="text/javascript"></script>
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
    </head>

    <body>
        <div class="container-fluid main-content">
            <div class="row">      
                <div class="col-lg-12 nomargin">
                    <div class="widget-container stats-container">
                        <div class="col-md-4 twittertile">
                            <div class="number">
                                <i class="icon-twitter"></i>
                                @Model.UserName
                            </div>
                            <div class="text">
                                Competition Stats
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="number">
                                <div class="icon visitors"></div>
                                @Model.Following.ToString("N0")
                            </div>
                            <div class="text">
                                Following
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="number">
                                <div class="icon visitors"></div>
                                @Model.Followers.ToString("N0")
                            </div>
                            <div class="text">
                                Followers
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="widget-container stats-container">
                        <div class="col-md-4">
                            <div class="number">
                                <div class="icon chat-bubbles"></div>
                                @Model.TweetsToday.ToString("N0")
                            </div>
                            <div class="text">
                                Tweets today
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="number">
                                <div class="icon chat-bubbles"></div>
                                @Model.TweetsAllTime.ToString("N0")
                            </div>
                            <div class="text">
                                All time tweets
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="number">
                                <div class="icon money"></div>
                                @Model.ExpectedWins.ToString("0.##")
                            </div>
                            <div class="text">
                                All time expected wins
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-md-6">
                    <h2>Daily tweets</h2>
                    <div class="widget-container fluid-height">
                        <div class="widget-content padded text-center">
                            <div class="graph-container">
                                <div class="caption"></div>
                                <div class="graph" id="hero-area"></div>
                            </div>
                        </div>
                    </div>
                    <br/>
                </div>
                <div class="col-md-6">
                    <h2>Daily average competitors</h2>
                    <div class="widget-container fluid-height">
                        <div class="widget-content padded text-center">
                            <div class="graph-container">
                                <div class="caption"></div>
                                <div class="graph" id="hero-bar"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
